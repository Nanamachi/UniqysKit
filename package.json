{
  "name": "bpp-project",
  "version": "0.0.1",
  "description": "Blockchain Platform Project",
  "private": true,
  "scripts": {
    "chain-init": "ts-node src/app/init.ts",
    "cli": "DEBUG=validator ts-node src/app/cli.ts ",
    "prebuild": "ts-node dev-script/generate-config-type-definition.ts",
    "build": "run-p build:*",
    "build:ts": "tsc -p tsconfig.build.json",
    "lint": "run-p lint:*",
    "lint:ts": "tslint -c tslint.json -p tsconfig.json",
    "watch": "run-p watch:*",
    "watch:ts": "tsc -w",
    "//watch:app": "nodemon dist/app.js",
    "test": "run-s test:build test:lint test:jest",
    "test:build": "tsc -p tsconfig.json --noEmit",
    "test:lint": "yarn lint",
    "test:jest": "jest --forceExit --coverage --verbose"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s build lint",
      "pre-push": "yarn test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfac/BPP.git"
  },
  "keywords": [],
  "author": "Mobile Factory",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mfac/BPP/issues"
  },
  "homepage": "https://github.com/mfac/BPP#readme",
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/debug": "^0.0.30",
    "@types/fs-extra": "^5.0.1",
    "@types/glob": "^5.0.35",
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.6",
    "@types/semaphore": "^1.1.0",
    "@types/yargs": "^11.0.0",
    "glob": "^7.1.2",
    "husky": "^0.15.0-rc.8",
    "jest": "^22.0.4",
    "json-schema-to-typescript": "^5.4.0",
    "nodemon": "^1.13.0",
    "npm-run-all": "^4.1.2",
    "ts-jest": "^22.0.4",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "ajv": "^6.2.1",
    "debug": "^3.1.0",
    "fs-extra": "^5.0.0",
    "keccak": "^1.4.0",
    "levelup": "^2.0.2",
    "memdown": "^2.0.0",
    "secp256k1": "^3.5.0",
    "semaphore": "^1.1.0",
    "yargs": "^11.0.0"
  }
}
