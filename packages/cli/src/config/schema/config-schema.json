{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "config schema",
  "type": "object",
  "required": ["gatewayPort", "innerApiPort", "memcachedPort", "appUrl"],
  "properties": {
    "gatewayPort": {
      "description": "Port number for gateway.",
      "type": "integer",
      "minimum": 1024,
      "maximum": 65535
    },
    "innerApiPort": {
      "description": "Port number for innerApi.",
      "type": "integer",
      "minimum": 1024,
      "maximum": 65535
    },
    "memcachedPort": {
      "description": "Port number for memcached compatible database.",
      "type": "integer",
      "minimum": 1024,
      "maximum": 65535
    },
    "appUrl": {
      "description": "URL for the application.",
      "type": "string"
    }
  }
}
