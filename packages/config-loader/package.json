{
  "name": "@uniqys/config-loader",
  "version": "0.0.1",
  "description": "load and validate json configuration file",
  "author": "Uniqys Project (https://uniqys.net)",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "build": "run-s build:tsc",
    "build:tsc": "tsc -p tsconfig.build.json",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "run-s test:build test:lint test:jest",
    "test:build": "tsc -p tsconfig.json --noEmit",
    "test:lint": "npm run lint",
    "test:jest": "jest --forceExit --detectOpenHandles --coverage --verbose"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.1.5",
    "@types/node": "^10.5.2",
    "@types/tmp": "0.0.33",
    "jest": "^23.4.0",
    "npm-run-all": "^4.1.3",
    "tmp": "0.0.33",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "ajv": "^6.5.2",
    "fs-extra": "^6.0.1"
  }
}
